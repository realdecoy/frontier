{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
   },
  "include": [
    "src/setupTests.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  
}