{
  "name": "frontier",
  "private": true,
  "version": "1.0.0",
  "description": "Realdecoy Labs Shared Libraries",
  "homepage": "https://github.com/realdecoy/frontier/blob/main/package.json",
  "main": "index.js",
  "author": "Realdecoy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/realdecoy/frontier"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "typecheck": "lerna run typecheck",
    "test": "yarn jest --passWithNoTests -c jest.config/all.js ",
    "test:packages": "jest -c jest.config/packages.js",
    "test:packages:ci": "yarn test:packages --ci --coverage",
    "nuke": "run-s nuke:artifacts",
    "nuke:artifacts": "lerna run clean",
    "postinstall": "patch-package",
    "build": "yarn && run-s build:packages build:finish",
    "build:finish": "notify -t \"Frontier\" -m \"All packages rebuilt\"",
    "build:packages": "lerna run rebuild --stream",
    "precommit": "test && lint-staged",
    "prepare": "husky install",
    "add-changesets": "changeset add",
    "release-ci": "lerna publish from-package --y --no-verify-access"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/jest": "^27.4.1",
    "babel-loader": "^8.2.4",
    "core-js": "^3.22.0",
    "eslint": "^8.13.0",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.8",
    "node-notifier-cli": "^2.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "webpack": "^4.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "@changesets/cli": "^2.6.1",
    "husky": "^7.0.4",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "patch-package": "^6.4.7",
    "pr-to-changesets": "^1.0.1",
    "rimraf": "^3.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "packages/frontier-plugins/plugin-qa/template/mobile-project-template",
      "packages/frontier-plugins/plugin-qa/template/project-template"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --no-semi --single-quote "
    ]
  }
}
