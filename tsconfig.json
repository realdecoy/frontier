{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": true,
  },
  "include": [
    "src/**/*" ],
  "exclude": [
    "node_modules/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
